@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        @foreach (var card in Model.Cards)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@card.Name</h5>
                        <p class="card-text">Координаты: @card.GeoCoordinates</p>
                        <a href="#" class="btn btn-primary">Редактировать</a>
                        <a href="#" class="btn btn-secondary">Восход/Закат</a>
                    </div>
                </div>
            </div>
        }
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <a href="#" class="btn btn-success">+ Add New</a>
                </div>
            </div>
        </div>
    </div>
</div>
